=image_tag(@current_tournament.homepage_photo.url(:medium), :width=>"181", :style=>"margin-bottom:20px")
%p
  %b Date Of Tournament:
  %br
  = @current_tournament.humanize
%p
  %b Registration Begins:
  %br
  = @current_tournament.human_times[:registration_begins]
%p
  %b Registration Ends:
  %br
  = @current_tournament.human_times[:registration_ends]
- if @current_tournament.show_scores?
  %h2
    =link_to "Official Scores", tournament_scores_path(@current_tournament)
