!!!
%html{:xmlns=>"http://www.w3.org/1999/xhtml", :lang=>"en", :"xml:lang"=>"en"} 
  %head
    %title
      Slide Shows in XHTML
    %link{:rel=>"stylesheet",:type=>"text/css", :media=>"screen, projection, print", :href=>"http://www.w3.org/Talks/Tools/Slidy2/styles/slidy.css"}
    %script{:src=>"http://www.w3.org/Talks/Tools/Slidy2/scripts/slidy.js",:charset=>"utf-8",:type=>"text/javascript"}
    :css
      div.slide {
        width:90%;
        margin:auto;
        background-color:white;
        padding: 3% 6%;
        width:82%;
        box-shadow:0px 0px 22px #222;
        -moz-box-shadow:0px 0px 22px #222;
        -o-box-shadow:0px 0px 22px #222;
        -webkit-box-shadow:0px 0px 22px #222;
      }
      body {
        background-color:#0A304E !important;
      }
      div.first-slide {
        text-align:center;
      }
      table td {
        padding:0.5em !important;
      }
      div.first-slide h1 {
        font-size:3em;
        margin:auto;
        padding:0 !important;
      }
      div.first-slide h2 {
        font-size:2em;
      }
      ul.scores {
        position:relative;
        left:100px;
      }
  %body
    .slide.title.first-slide.cover
      %h1 Science Olympiad
      %h2 Regional Tournament
      =image_tag "sciolylogo_transparent.png"
      %h2 Case Western Reserve University
      %h2 February 25th, 2012
    =yield
