!!!
%head
  = render 'shared/header'

%body
  .navbar-default
    .container
      .navbar-left
        = link_to 'Foundry', root_path, class: 'navbar-brand'
      .navbar-right
        %ul.nav.navbar-nav
          %li= link_to 'About', '#'
          %li= link_to 'Help', '#'
          - if @current_user
            %li= link_to @current_user.email, user_path(@current_user)
          - else
            %li= link_to 'Log In', login_users_path

  - if content_for?(:before_content)
    = yield :before_content
  - else
    %header.site-title-container
      .container
        %h1.site-title
          - if content_for?(:title)
            = yield :title
          - else
            = link_to root_path, 'Foundry'

  %section.container
    - if flash[:error]
      .alert.alert-danger= flash[:error]
    - if flash[:message]
      .alert.alert-warning= flash[:message]
    = yield

  = yield :javascripts
