=render :partial => "/layouts/header"
%body#home
  = render :partial => "/layouts/cwruheader"
  - if breadcrumbs.items.length == 1
    = render :partial => "/layouts/headerbelowbar"
  = render :partial => "/layouts/navigation"
  #contentWrapper
    - if !current_page?("/")
      .row
        .span16
          %h3
            =breadcrumbs.render(:format => :bootstrap)
    .row
      .span11
        - if flash[:error]
          %div.alert-message.error=flash[:error]
        - if flash[:message]
          %div.alert-message.info=flash[:message]
        = yield
      .span4.offset1
        .well
          - if @team
            =render :partial => "/layouts/rightreminder"
          - else
            =render :partial => "/layouts/rightinformation"
  = render :partial => "/layouts/footer"
