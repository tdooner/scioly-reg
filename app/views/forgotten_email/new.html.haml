.row
  %h3 Forgot Email?

  = form_tag forgotten_email_index_path, class: 'form-horizontal' do
    .form-group
      = label_tag :team_id, 'Select A Team:', class: 'control-label col-md-3'
      .col-md-9
        = select :team, :id, @teams.map { |x| ["#{x[:name]} (Team #{x.getNumber})", x.id] }, {}, class: 'form-control'
    .form-group
      = label_tag :password, 'Password:', class: 'control-label col-md-3'
      .col-md-9
        = password_field_tag :password, '', class: 'form-control'

    .row
      .col-md-9.col-md-offset-3
        = submit_tag 'Find My Email Address', :class=>"btn btn-primary"
        = link_to 'Cancel', login_users_path, class: 'btn'
