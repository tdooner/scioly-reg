- provide :title, 'Login to Foundry'
.row
  = form_tag login_users_path(next_path: params[:next_path]), class: 'form-horizontal' do
    .form-group
      = label_tag :email, 'Email:', class: 'control-label col-md-3'
      .col-md-9
        = text_field_tag :email, '', class: 'form-control'

    .form-group
      = label_tag :password, 'Password:', class: 'control-label col-md-3'
      .col-md-9
        = password_field_tag :password, '', class: 'form-control'

    .row
      .col-md-9.col-md-offset-3
        = submit_tag "Log In!", :class=>"btn btn-primary"
