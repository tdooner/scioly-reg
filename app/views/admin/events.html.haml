- content_for :javascripts do
  :javascript
    $(function() {
      $("#events-table").tablesorter({ sortList: [[0,0],[1,0]] });
    });

.alert-message.block-message.info
  Below are the event pages for this tournament. Click on "Edit" to edit the properties of an event.
  .alert-actions
    =link_to "New Event", new_admin_schedule_path, :class=>"btn btn-default"
    =link_to "Import Events", batchnew_admin_schedules_path, :class=>"btn btn-default"
    =link_to "Export Events to Excel", admin_events_url(:format => 'csv'), :class => 'btn btn-default'
    =link_to "Download Registration PDFs", all_pdfs_admin_schedules_url(:format => :pdf), :class=>"btn btn-default"

%table.table.table-striped#events-table
  %thead
    %th
      %b Division
    %th
      %b Event Name
    %th
      %b Teams Scheduled
    %th
      %b Free Slots
    %th
      %b Edit
    %th
      %b Delete
  %tbody
    -@events.each do |e|
      %tr
        %td= e.division
        %td= link_to "#{e.event} (#{e.division})", edit_admin_schedule_url(e.id)
        %td
          - if e.is_scheduled_online?
            %b>="#{@event_signups[e.id]}"
            ="/#{@teams_by_division[e.division]}"
          -else
            \-
        %td
          - if e.is_scheduled_online?
            =@event_capacity[e.id]
          -else
            \-
        %td= link_to "Edit", edit_admin_schedule_url(e.id)
        %td= link_to "Delete!", schedule_url(e),
          data: { confirm: "Are you sure you wish to delete this event? All corresponding Timeslots and Registrations will be deleted!" },
          method: :delete
