%h3="#{@current_school.name} Information"
=form_for(@current_school, :url=>admin_school_update_url, :html=>{:multipart=>:true}) do |f|
  %fieldset
    .clearfix
      =f.label :admin_name, "Primary Contact:"
      .input
        =f.text_field :admin_name
    .clearfix
      =f.label :admin_email, "Email:"
      .input
        =f.text_field :admin_email
    .clearfix
      =f.label :password, "New Password:"
      .input
        =f.password_field :password
    .clearfix
      =f.label :password_confirm, "Password Confirm:"
      .input
        =f.password_field :password_confirm
    .clearfix
      =f.label :logo, "School Logo:"
      .input
        =f.file_field :logo
    .clearfix=image_tag @current_school.logo.url(:medium)
  %fieldset
    %p To make any changes, you must input the current password:
    .clearfix
      =f.label :existing_password, "Current Password:"
      .input
        =f.password_field :existing_password
  .actions
    =f.submit "Submit Changes", :class=>"btn primary"
