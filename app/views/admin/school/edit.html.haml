= form_for @current_school, url: admin_school_update_url,
                            html: { multipart: true, class: 'form-horizontal' } do |f|

  .form-group
    = f.label :admin_name, "Primary Contact:", class: 'col-md-3 control-label'
    .col-md-9
      = f.text_field :admin_name, class: 'form-control'

  .form-group
    = f.label :admin_email, "Email:", class: 'col-md-3 control-label'
    .col-md-9
      = f.text_field :admin_email, class: 'form-control'

  .form-group
    = f.label :logo, "School Logo:", class: 'col-md-3 control-label'
    .col-md-9
      = f.file_field :logo
      %p.help-block
        Current Logo:
      = image_tag @current_school.logo.url(:medium)

  .form-group
    = f.label :time_zone, "School Time Zone:", class: 'col-md-3 control-label'
    .col-md-9
      = f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {}, class: 'form-control'

  %p.alert.alert-warning To make any changes, you must enter your password:

  .form-group
    = label :current_password, "Password:", class: 'col-md-3 control-label'
    .col-md-9
      = password_field_tag :current_password, '', class: 'form-control'

  .row
    .col-md-9.col-md-offset-3
      = f.submit "Submit Changes", class: 'btn btn-primary'
